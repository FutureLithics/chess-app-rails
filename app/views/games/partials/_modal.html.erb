<%= turbo_stream_from :game_state %>

<div
    id="game_modal"
    data-controller="modal"
    data-modal-target="modal"
    class="<%= message.nil? ? "hidden" : "block" %> w-full h-full p-24 absolute left-0 top-0 flex justify-center content-center items-center bg-slate-700 bg-opacity-20">
    <div class="relative inline-block max-h-fit shrink p-8 bg-slate-600 rounded-lg <%= message && message[:class_name] %>">
        <div class="w-full">
            <div
                class="close-modal-icon"
                data-action="click->modal#close"
            >
                <p>x</p>
            </div>
        </div>
        <div class="flex flex-col text-brightBlue">
            <h3 class="text-xl"><%= message && message[:title] %></h3>
            <p><%= message && message[:message] %></p>
        </div>
    </div>
</div>