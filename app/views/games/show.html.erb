<div class="w-100 min-h-screen mt-12 w-100 items-stretch flex">
	<div class="grow-0 w-1/4 px-4 py-8">
		<div class="grow-0 bg-slate-600 p-2 rounded-lg border border-slate-950">
			<h4><%= display_user %></h4>
		</div>
		<% render partial: "forms/opponents" %>
	</div>
	<div class="grow">
		<div class="flex justify-end content-center px-4 py-8">
			<%= link_to "New Game",
				init_game_path,
				class: "btn btn__cta p-1 text-base",
				data: { turbo_frame: "new_game" } %>
		</div>

		<%= turbo_frame_tag "new_game" %>

		<div id="chess_board" class="w-full flex flex-col">
			<% chess_board.reverse.each_with_index do |y_axis, y| %>
				<div class="flex">
				<% y_axis.each_with_index do |x_axis, x| %>
					<% square_attr = define_square(x, y) %>
					<div class="square <%= square_attr[:color] == 0 ? "black" : "white" %>" 
					     data-x="<%= square_attr[:x] %>"
						 data-y="<%= square_attr[:y] %>">
					</div>
				<% end %>
				</div>
			<% end %>
		</div>
	</div>
</div>
