<div class="w-full mt-4 items-start flex md:flex-row flex-col-reverse">
	<div class="flex md:min-h-screen flex-col md:w-2/3 content-center md:justify-center">
		<%= turbo_frame_tag "new_game" %>
		<div id="player-one" class="w-[275px]">
			<%= render "games/partials/players", player: @presenter.players[1] %>
		</div>
		<div class="flex justify-start my-2">
			<%= render "games/partials/board", presenter: @presenter, user: @user %>
		</div>
		<div id="player-two" class="w-[275px] max-w-4/5">
			<%= render "games/partials/players", player: @presenter.players[0] %>
		</div>
	</div>
	<div class="md:w-1/3 h-full flex flex-col justify-start flex-grow-1 md:px-4 py-8">
		<div class="flex justify-start content-center md:px-4">
			<%= link_to "New Game",
				init_game_path,
				class: "btn btn__cta p-1 text-base",
				data: { turbo_frame: "new_game" } %>
		</div>
	</div>
</div>
